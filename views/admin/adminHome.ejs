<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Home</title>
</head>
<body>
    <h1>BELI BELI Admin</h1>
    <a href="/admin/tickets/add">Add Ticket</a>
    <table>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Place</th>
            <th>Action</th>
        </tr>
        <% data.forEach(ticket => { %>
            <tr>
                <td><%= ticket.name %></td>
                <td><%= ticket.date.toLocaleDateString() %></td>
                <td><%= ticket.place %></td>
                <td>
                    <a href="/admin/tickets/<%= ticket.id %>/edit">Edit</a>
                    <form action="/admin/tickets/<%= ticket.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this ticket?')">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
