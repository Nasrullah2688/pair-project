<!DOCTYPE html>
<html>
<head>
  <title>Edit User Profile</title>
</head>
<body>
  <h1>Edit User Profile</h1>
  <form action="/userprofiles/<%= userProfile.id %>/edit" method="POST">
    <label for="bio">Bio:</label>
    <input type="text" id="bio" name="bio" value="<%= userProfile.bio %>" required>
    <br>
    <label for="photo">Photo URL:</label>
    <input type="url" id="photo" name="photo" value="<%= userProfile.photo %>" required>
    <br>
    <label for="userId">User:</label>
    <select id="userId" name="userId" required>
      <% users.forEach(user => { %>
        <option value="<%= user.id %>" <%= userProfile.UserId === user.id ? 'selected' : '' %>><%= user.name %></option>
      <% }) %>
    </select>
    <br>
    <button type="submit">Update</button>
  </form>
</body>
</html>
